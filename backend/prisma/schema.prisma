// ============================================================
// Prisma Client configuratie
// ============================================================
generator client {
  provider = "prisma-client-js"
}

// ============================================================
// Database configuratie
// ============================================================
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================================
// User model
// ============================================================
model User {
  id          String @id @default(uuid())
  auth0Id     String @unique
  username    String? @unique
  password    String?
  name        String?

  email       String?
  phoneNumber String?
  pictureUrl  String?


  // Relaties
  bookings Booking[]
  reviews  Review[]
}

// ============================================================
// Host model
// ============================================================
model Host {
  id          String @id @default(uuid())
  username    String @unique
  password    String?
  name        String 
  auth0Id     String @unique
  email       String @unique
  phoneNumber String
  pictureUrl  String
  aboutMe     String

  // Relaties
  properties Property[]
}

// ============================================================
// Property model
// ============================================================
model Property {
  id            String          @id @default(uuid())
  hostId        String
  title         String
  description   String
  location      String
  pricePerNight Float
  bedroomCount  Int
  bathRoomCount Int
  maxGuestCount Int
  rating        Int

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  latitude      Float?
  longitude     Float?
  isActive      Boolean         @default(true)
  cleaningFee   Float? 
  serviceFee    Float?
  minimumNights Int? 
  maximumNights Int?

  host          Host            @relation(fields: [hostId], references: [id])
  bookings      Booking[]
  reviews       Review[]
  amenities     Amenity[]
  images        PropertyImage[]
}
// ============================================================
// PropertyImg  model
// ============================================================

model PropertyImage {
  id         String   @id @default(uuid())
  propertyId String
  url        String
  publicId   String
  order      Int      @default(0)

  property   Property @relation(fields: [propertyId], references: [id])
  
  
}



// ============================================================
// Amenity model (many-to-many met Property)
// ============================================================
model Amenity {
  id         String    @id @default(uuid())
  name       String

  // Relaties
  properties Property[]
}

// ============================================================
// Booking model
// ============================================================
model Booking {
  id             String   @id @default(uuid())
  userId         String
  propertyId     String
  checkinDate    DateTime
  checkoutDate   DateTime
  numberOfGuests Int
  totalPrice     Float
  bookingStatus  String

  // Nieuwe velden voor boeking-details
  name           String
  email          String
  notes          String?

  // Relaties
  user     User     @relation(fields: [userId], references: [id])
  property Property @relation(fields: [propertyId], references: [id])
}

// ============================================================
// Review model
// ============================================================
model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relaties
  userId     String
  propertyId String
  user       User     @relation(fields: [userId], references: [id])
  property   Property @relation(fields: [propertyId], references: [id])
}


