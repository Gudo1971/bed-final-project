generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  auth0Id     String  @unique
  username    String? @unique
  password    String?
  name        String?
  email       String?
  phoneNumber String?
  pictureUrl  String?
  isHost      Boolean @default(false)

  properties Property[]
  bookings   Booking[]
  reviews    Review[]
}

model Property {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  title         String
  description   String
  location      String
  pricePerNight Float
  bedroomCount  Int
  bathRoomCount Int
  maxGuestCount Int
  rating        Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  latitude      Float?
  longitude     Float?
  isActive      Boolean @default(true)
  cleaningFee   Float?
  serviceFee    Float?
  minimumNights Int?
  maximumNights Int?

  bookings  Booking[]
  reviews   Review[]
  amenities Amenity[]
  images    PropertyImage[]
}

model Booking {
  id             String   @id @default(uuid())
  userId         String
  propertyId     String
  checkinDate    DateTime
  checkoutDate   DateTime
  numberOfGuests Int
  totalPrice     Float
  bookingStatus  String

  name  String
  email String
  notes String?

  user     User     @relation(fields: [userId], references: [id])
  property Property @relation(fields: [propertyId], references: [id])
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId     String
  propertyId String

  user     User     @relation(fields: [userId], references: [id])
  property Property @relation(fields: [propertyId], references: [id])
}

model Amenity {
  id         String     @id @default(uuid())
  name       String
  properties Property[]
}

model PropertyImage {
  id         String @id @default(uuid())
  propertyId String
  url        String
  publicId   String
  order      Int    @default(0)

  property Property @relation(fields: [propertyId], references: [id])
}
