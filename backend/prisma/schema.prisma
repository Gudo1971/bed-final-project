// ============================================================
// Prisma Client configuratie
// ============================================================
generator client {
  provider = "prisma-client-js"
}

// ============================================================
// Database configuratie
// ============================================================
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================================
// User model
// ============================================================
model User {
  id          String @id @default(uuid())
  username    String @unique
  password    String
  name        String
  auth0Id     String @unique
  email       String
  phoneNumber String
  pictureUrl  String

  // Relaties
  bookings Booking[]
  reviews  Review[]
}

// ============================================================
// Host model
// ============================================================
model Host {
  id          String @id @default(uuid())
  username    String @unique
  password    String
  name        String 
  auth0Id     String @unique
  email       String @unique
  phoneNumber String
  pictureUrl  String
  aboutMe     String

  // Relaties
  properties Property[]
}

// ============================================================
// Property model
// ============================================================
model Property {
  id            String @id @default(uuid())
  hostId        String
  title         String
  description   String
  location      String
  pricePerNight Float
  bedroomCount  Int
  bathRoomCount Int
  maxGuestCount Int
  rating        Int

  // Relaties
  host       Host      @relation(fields: [hostId], references: [id])
  bookings   Booking[]
  reviews    Review[]
  amenities  Amenity[]
}

// ============================================================
// Amenity model (many-to-many met Property)
// ============================================================
model Amenity {
  id         String    @id @default(uuid())
  name       String

  // Relaties
  properties Property[]
}

// ============================================================
// Booking model
// ============================================================
model Booking {
  id             String   @id @default(uuid())
  userId         String
  propertyId     String
  checkinDate    DateTime
  checkoutDate   DateTime
  numberOfGuests Int
  totalPrice     Float
  bookingStatus  String

  // Nieuwe velden voor boeking-details
  name           String
  email          String
  notes          String?

  // Relaties
  user     User     @relation(fields: [userId], references: [id])
  property Property @relation(fields: [propertyId], references: [id])
}

// ============================================================
// Review model
// ============================================================
model Review {
  id         String @id @default(uuid())
  userId     String
  propertyId String
  rating     Int
  comment    String

  // Relaties
  user     User     @relation(fields: [userId], references: [id])
  property Property @relation(fields: [propertyId], references: [id])
}
